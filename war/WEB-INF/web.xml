<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">


  <!-- Servlets -->
  
   <servlet>
    <servlet-name>searchServlet</servlet-name>
    <servlet-class>servlet.communication.SearchServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>searchServlet</servlet-name>
    <url-pattern>/searchbyword</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>userRegistration</servlet-name>
    <servlet-class>servlet.communication.UserRegistrationServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>userRegistration</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>trainning</servlet-name>
    <servlet-class>servlet.communication.TrainningServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>trainning</servlet-name>
    <url-pattern>/trainning</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>pendingTrainning</servlet-name>
    <servlet-class>servlet.communication.PendingTrainningServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>pendingTrainning</servlet-name>
    <url-pattern>/pendingTrainning</url-pattern>
  </servlet-mapping>  
  
  <servlet>
    <servlet-name>exercice</servlet-name>
    <servlet-class>servlet.communication.ExerciceServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>exercice</servlet-name>
    <url-pattern>/exercice</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>welcome</servlet-name>
    <servlet-class>servlet.communication.WelcomeServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>welcome</servlet-name>
    <url-pattern>/welcome</url-pattern>
  </servlet-mapping>  
  
  <servlet>
    <servlet-name>openIdServlet</servlet-name>
    <servlet-class>servlet.communication.OpenIdServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>openIdServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

</web-app>
